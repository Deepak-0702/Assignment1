#include<iostream>
using namespace std;
int FindMax(int arr[],int n)
{
    if(n==1) return arr[0];
    
    int maxi=FindMax(arr,n-1);
    if(arr[n-1]>maxi)
    {
        return arr[n-1];
    }
    else{
        return maxi;
    }
}
int main()
{
    int arr[]={5,9,2,1,7,10,6};
    int n=sizeof(arr)/sizeof(arr[0]);
    int maximum=FindMax(arr,n);
    cout<<"Maximum element from an array:"<<maximum<<endl;
    return 0;
}
