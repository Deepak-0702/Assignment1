#include<iostream>
using namespace std;
int CountDigits(int n)
{
    if(n<0)
    {
        n=-n;
    }
    if(n<10)
    {
        return 1;
    }
    return 1+CountDigits(n/10);
}
int main()
{
    int num;
    cout<<"enter the integer value:";
    cin>>num;
    cout<<"total of digits:"<<CountDigits(num)<<endl;
    return 0;
}
